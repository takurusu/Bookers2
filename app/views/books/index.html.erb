<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="User-info">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <p>name<%= @user.name %></p>
        <p>introduction</p>
        <%= link_to "edit", edit_user_path(@user) %>
      </div>
      <div class="New-book">
        <h2>New book</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <%= @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @book, local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="Books">
        <h2>Books</h2>
        <% @books.each do |book| %>
        <div>
          <%= link_to book_path(book.id) do %>
          <% end %>
          <p>投稿ユーザー画像：<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
          <p>Title：<%= book.title %></p>
          <p>Opinion：<%= book.body %></p>
          <p>ユーザーネーム：<%= book.user.name %></p>
        </div>
        <% end %>
        <%= paginate @books %>
      </div>
    </div>
  </div>
</div>