<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <p>Name<p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        <p>Image</p>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <p>Introduction</p>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
        <p>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
        </p>
      <% end %>
    </div>
  </div>
</div>