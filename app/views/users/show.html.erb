<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/bfeb8eca56.js" crossorigin="anonymous"></script>
  </head>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <table class="table table-stripped">
          <h2>Books</h2>
          <thread>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thread>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= book.title %><%= link_to book_path(book.id) do %><% end %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            <%= paginate @books %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</html>